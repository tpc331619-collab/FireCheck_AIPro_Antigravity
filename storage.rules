rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Maps are stored in maps/{userId}/{filename}
    // Only the owner (userId matching auth.uid) can read, write, or delete
    match /maps/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Avatars/Cloud Gallery images are stored in avatars/{userId}/{filename}
    match /avatars/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
