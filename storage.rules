rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // 允許所有人讀取（解決連結失效或 403 問題），登入者可寫入 (支援組織共用)
    match /maps/{path}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /avatars/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /equipments/{path}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // 開發測試用全開規則 (目前已由上方細分規則取代)
    // match /{allPaths=**} {
    //   allow read, write: if request.auth != null;
    // }
  }
}
